          <h4 class="userProfileName">Jayveer Kumar</h4>
        </div>
        <textarea class="messageinputForPost" placeholder="What do you want to talk about"></textarea>
        <div class="Postcontrols">
          <button class="imagebtn">Image</button>
          <button class="mediabtn">Video</button>
          <button class="calendarbtn">ðŸ“…</button>
          <button class="addbtn">âž•</button>
        </div>
        <div class="postbtncontainer">
          <button class="post-btn">Post</button>
        </div>
      </div>
      <script src="/javascript/navbar.js"></script>
</body>
</html>




  